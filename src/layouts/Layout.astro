---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="h-screen w-screen flex flex-col">
		<div class="flex justify-center h-64">
			<img class="w-[400px]" src="https://astro.build/assets/press/full-logo-light.svg" alt="">
		</div>
		<div class="flex-grow">
			<slot />
		</div>
	</body>
</html>
<style>

	:root {
		--font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
		--font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
		--font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

		--color-text: hsl(12, 5%, 4%);
		--color-bg: hsl(10, 21%, 95%);
		--color-border: hsl(17, 24%, 90%);
	}

	html {
		font-family: system-ui, sans-serif;
		font-size: var(--font-size-base);
		color: var(--color-text);
		background-color: var(--color-bg);
	}

	body {
		margin: 0;
	}

	:global(h1) {
		font-size: var(--font-size-xl);
		text-align: center;
	}

	:global(h2) {
		font-size: var(--font-size-lg);
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	:global(button) {
		@apply bg-slate-300 transition-all hover:opacity-90 p-1 pl-3 pr-3 w-fit;
		border-radius: 5px;
	}
	:global(button:disabled) {
		@apply bg-slate-200 cursor-not-allowed;
	}
	:global(a) {
		@apply transition-all bg-orange-300 hover:bg-orange-500 hover:opacity-90 p-1 pl-3 pr-3 w-fit;
		border-radius: 5px;
	}
</style>
